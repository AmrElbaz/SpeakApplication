<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.web.HTMLEditor?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="400.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/10.0.2-internal"
            fx:controller="org.project.controller.chat_home.right_side.MainChatController">
   <bottom>
      <HBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="100.0"
            BorderPane.alignment="CENTER">
         <children>
            <HTMLEditor fx:id="messageBox" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                        minHeight="-Infinity" minWidth="100.0" nodeOrientation="LEFT_TO_RIGHT"
                        onKeyPressed="#sendMethod" prefHeight="150.0" prefWidth="698.0" scaleShape="false"
                        HBox.hgrow="ALWAYS">
            </HTMLEditor>
            <Button fx:id="buttonSend" alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="50.0"
                    minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#sendButtonAction"
                    prefHeight="43.0" prefWidth="140.0" scaleShape="false" text="Send" textAlignment="CENTER"
                    HBox.hgrow="NEVER"/>
            <Button fx:id="recordBtn" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                    mnemonicParsing="false">
               <graphic>
                  <ImageView fx:id="microphoneImageView" fitHeight="24.0" fitWidth="24.0" pickOnBounds="true"
                             preserveRatio="true">
                     <image>
                        <Image url="@../images/microphone.png"/>
                     </image>
                  </ImageView>
               </graphic>
            </Button>
         </children>
      </HBox>
   </bottom>
   <center>
      <ListView fx:id="chatPane" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                BorderPane.alignment="CENTER"/>
   </center>
</BorderPane>
